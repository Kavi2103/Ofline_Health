@{
    ViewData["Title"] = "LoginSuccess";
}

<h1>LoginSuccess</h1>
<form method="post" asp-controller="Admin" asp-action="Logout">
    <button type="submit" class="btn btn-primary">Logout</button>
</form>

<form method="post" asp-controller="Admin" asp-action="Check">
    <button type="submit" class="btn btn-primary" data-bind="click: checkClicked">Check</button>
</form>

<script src="https://cdnjs.cloudflare.com/ajax/libs/knockout/3.5.1/knockout-min.js"></script>
<script>
    // Knockout.js code
    // Define a ViewModel for the page
    function PageViewModel() {
        var self = this;

        // Function to handle the Check button click
        self.checkClicked = function () {
            // Perform the desired action on Check button click
            // Example: Make an AJAX request, update UI, etc.
            console.log("Check button clicked!");

            // Sample action: Display an alert
            alert("Check button clicked!");
        };

        // Function to handle the Logout button click
        self.logoutClicked = function () {
            // Perform the desired action on Logout button click
            // Example: Make an AJAX request, redirect to another page, etc.
            console.log("Logout button clicked!");

            // Sample action: Redirect to a different page.
            window.location.href = "/Admin/Login";
        };
    }

    // Apply the bindings
    var viewModel = new PageViewModel();
    ko.applyBindings(viewModel);
</script>
